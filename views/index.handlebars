<h1>Burger App!</h1>

<section >
    <div class="d-flex justify-content-between">
        <div class="my-3">
            <div class="card bg-dark p-2 burger-list shadow">
                <h2>These burgers have not been eaten!</h2>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div class="my-3">

        <div class="my-3">
            <div class="card bg-dark p-2 burger-list shadow">
                <h2>These burgers have been devoured!</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="card bg-dark mt-5 shadow">
        <div class="card-body">
            <h2 class="card-title">Create a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burg">Burger:</label>
                    <input class="form-control" type="text" id="burg" name="name">
                </div>

                <div class="custom-control custom-radio">
                    <label for="slee">Devoured?</label><br>
                    <input type="radio" name="devoured" value="1" checked> devoured!<br>
                    <input type="radio" name="devoured" value="0"> Not Devoured
                </div>

                <button type="submit" class="btn btn-success">Build Burger</button>
            </form>
        </div>
    </div>
</section>